{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin-macchiato",
  "autoupdate": true,
  "mcp": {
    "nixos": {
      "type": "local",
      "command": ["uvx", "mcp-nixos"]
    },
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", ".tmp/logs/", "/var/log/", "/tmp/"]
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp", "--headless", "--browser=chromium"]
    }
  }
}
